<Controls:MetroWindow x:Class="SimpleFOMOD.ModuleConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleFOMOD"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Mod Configuration" Height="480" Width="960"
        TitleCaps="False" ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <!--<Dialog:CustomDialog x:Key="CustomDialogTest"
                                 Title="Check out this sweet fucking dialog."
                                 x:Name="CustomTestDialog">
                <Image x:Name="imgLogo" Height="100" Margin="10,17,10,0" VerticalAlignment="Top" Source="Resources/SimpleFOMOD_Logo.png"/>
            </Dialog:CustomDialog>-->
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Folder stuff -->
        <TextBox x:Name="txtFolderBrowse" HorizontalAlignment="Left" Height="23" Margin="90,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" IsReadOnly="True" Controls:TextBoxHelper.Watermark="Select folder..."/>
        <Button x:Name="btnFolderBrowse" Content="Browse" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnFolderBrowse_Click" Height="26"/>
        <!-- Group stuff -->
        <ListBox x:Name="lstGroup" HorizontalAlignment="Left" Height="197" Margin="10,75,0,0" VerticalAlignment="Top" Width="170" BorderThickness="1" HorizontalContentAlignment="Center" />
        <TextBox x:Name="txtAddGroup" HorizontalAlignment="Left" Height="23" Margin="10,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170" FontFamily="Segoe UI" KeyDown="txtAddGroup_KeyDown" TextAlignment="Left" Controls:TextBoxHelper.Watermark="Add Group..."/>
        <RadioButton x:Name="rboSelectAny" Content="SelectAny" HorizontalAlignment="Left" Margin="10,282,0,0" VerticalAlignment="Top" IsChecked="True" ToolTip="Allow user to select any modules in this  group." ToolTipService.InitialShowDelay="0"/>
        <RadioButton x:Name="rboSelectOne" Content="SelectOne" HorizontalAlignment="Left" Margin="102,282,0,0" VerticalAlignment="Top" ToolTip="Allow user to select only one module from this group." ToolTipService.InitialShowDelay="0"/>
        <!-- Module stuff -->
        <ListBox x:Name="lstModule" HorizontalAlignment="Left" Height="197" Margin="195,75,0,0" VerticalAlignment="Top" Width="170" BorderThickness="1" HorizontalContentAlignment="Center" />
        <TextBox x:Name="txtAddModule" HorizontalAlignment="Left" Height="23" Margin="195,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170" FontFamily="Segoe UI" KeyDown="txtAddModule_KeyDown" TextAlignment="Left" Controls:TextBoxHelper.Watermark="Add Module..."/>
        <TextBox x:Name="txtImageBrowse" HorizontalAlignment="Left" Height="26" Margin="333,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" IsReadOnly="True" Controls:TextBoxHelper.Watermark="[OPTIONAL] Select Image For This Module..."/>
        <Button x:Name="btnImageBrowse" Content="Browse" HorizontalAlignment="Left" Margin="195,278,0,0" VerticalAlignment="Top" Width="103" Click="btnImageBrowse_Click" Height="24"/>
        <!-- File stuff -->
        <ListBox x:Name="lstAllFiles" HorizontalAlignment="Left" Height="262" Margin="397,10,0,0" VerticalAlignment="Top" Width="181" BorderThickness="1" HorizontalContentAlignment="Center" />
        <ListBox x:Name="lstSelectedFiles" HorizontalAlignment="Left" Height="262" Margin="633,10,0,0" VerticalAlignment="Top" Width="179" BorderThickness="1" HorizontalContentAlignment="Center" />
        <Button x:Name="btnAddFiles" Content="&gt;&gt;&gt;" HorizontalAlignment="Left" Margin="583,117,0,0" VerticalAlignment="Top" Width="45" Click="btnAddFiles_Click"/>
        <Button x:Name="btnRemoveFiles" Content="&lt;&lt;&lt;" HorizontalAlignment="Left" Margin="583,147,0,0" VerticalAlignment="Top" Width="45" Click="btnRemoveFiles_Click"/>
        <TextBox x:Name="txtDestination" HorizontalAlignment="Left" Height="23" Margin="633,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Controls:TextBoxHelper.Watermark="[OPTIONAL] Destination..."/>
        <Label x:Name="lblDestinationHelp" Content="?" HorizontalAlignment="Left" Margin="789,277,0,0" VerticalAlignment="Top" Width="23" ToolTip="Specify a destination folder to install the selected file. - Eg. 'Texture' would install that file into 'Data/Texture'" ToolTipService.InitialShowDelay="0"/>

    </Grid>
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout Header="Select a folder" Position="Right" Width="400" Theme="Adapt" Name="FolderBrowserFlyout">
                <Grid>
                    <Grid.ColumnDefinitions>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="10,10,10,5">
                        Note: Ensure your folder contains only the loose files you wish to contain in your mod, with no subdirectories
                    </TextBlock>
                    <TreeView x:Name="foldersItem"
                              Width="Auto" 
                              BorderBrush="#FFFFFFFF"
                              Foreground="#FFFFFFFF" Margin="10"
                              Grid.Row="1"
                              SelectedItemChanged="foldersItem_SelectedItemChanged">
                        <TreeView.Resources>
                            <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource MetroTreeViewItem}">
                                <Setter Property="HeaderTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">

                                                <TextBlock Text="{Binding}" Margin="5,0" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
</Controls:MetroWindow>
